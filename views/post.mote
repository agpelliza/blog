% if post.previous
  {{ this.partial("post_arrow", post: post.previous, image: "left-45.png", hover: "lefthover") }}
% end

% if post.next
  {{ this.partial("post_arrow", post: post.next, image: "right-45.png", hover: "righthover") }}
% end

<div class="wrapper">
  <div class="post">
    {{post.body}}
  </div>
</div>